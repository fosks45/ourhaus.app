{
  "name": "ourhaus",
  "version": "0.1.0",
  "private": true,
  "description": "OurHaus monorepo - A Next.js App Router TypeScript web application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
